<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/john"
        android:padding="16dp"
        android:lineSpacingMultiplier="1.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elizabeth Johnson"
        android:textSize="30sp"
        android:background="@color/cardview_shadow_start_color"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/pos"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:text="Position:"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/john"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <TextView
        android:id="@+id/role"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:text="Project manager"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/pos"
        app:layout_constraintTop_toBottomOf="@+id/john"></TextView>

    <TextView
        android:id="@+id/email"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:text="Email:"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/pos"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <TextView
        android:id="@+id/mail"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:text="elizabethjohnson@example.com"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/role"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>