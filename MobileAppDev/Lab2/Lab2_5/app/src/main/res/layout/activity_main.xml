<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        ></TextView>
    <EditText
        android:id="@+id/name_input"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintEnd_toEndOf="parent"></EditText>
    <TextView
        android:id="@+id/thumb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thumbnail"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"></TextView>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/thumb"
        app:layout_constraintStart_toEndOf="@id/thumb"
        app:layout_constraintEnd_toEndOf="parent"></Spinner>
    <TextView
        android:id="@+id/promotion"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Promotion"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/thumb"
        app:layout_constraintStart_toStartOf="parent"></TextView>
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/promotion"
        app:layout_constraintTop_toTopOf="@id/promotion"></CheckBox>
    <Button
        android:id="@+id/btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ADD A NEW DISH"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/promotion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></Button>
    <GridView
        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></GridView>
</androidx.constraintlayout.widget.ConstraintLayout>