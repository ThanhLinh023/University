<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/hinh"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/sing"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="Singapore"
        android:textSize="40dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hinh"></TextView>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/star"
        app:layout_constraintTop_toBottomOf="@+id/hinh"
        app:layout_constraintEnd_toEndOf="parent">
    </ImageView>
    <TextView
        android:id="@+id/camera"
        android:text="Camera"
        android:textSize="25sp"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/sing"
        app:layout_constraintStart_toStartOf="parent"></TextView>
    <EditText
        android:id="@+id/cam_edit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:textSize="17sp"
        android:hint="Leica M Typ 240"
        app:layout_constraintStart_toEndOf="@+id/camera"
        app:layout_constraintTop_toTopOf="@+id/camera"
        app:layout_constraintEnd_toEndOf="parent"></EditText>
    <TextView
        android:id="@+id/setting"
        android:text="Settings"
        android:textSize="25sp"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/camera"
        app:layout_constraintStart_toStartOf="parent"></TextView>
    <EditText
        android:id="@+id/set_edit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:textSize="17sp"
        android:hint="f/4 16s ISO200"
        app:layout_constraintStart_toEndOf="@+id/setting"
        app:layout_constraintTop_toTopOf="@+id/setting"
        app:layout_constraintEnd_toEndOf="parent"></EditText>
    <TextView
        android:id="@+id/para"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Singapore officially the Republic of Singapore, and often referred to as the Lion City
, the Garden City, and the Red Dot, is a global city in Southeast Asia and the world's only island city-state. It lies
one degree (137km) north of the equator, at the southernmost tip of continental Asia and peninsular Malaysia, with
Indonesia's Riau Islands to the south. Singapore's territory consists of the diamond-shaped main island and 62 islets"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_edit"></TextView>
    <Button
        android:id="@+id/discard"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:text="DISCARD"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@+id/para"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        ></Button>
    <Button
        android:id="@+id/upload"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:text="UPLOAD"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/para"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/discard"
        app:layout_constraintBottom_toBottomOf="parent"
        ></Button>
</androidx.constraintlayout.widget.ConstraintLayout>